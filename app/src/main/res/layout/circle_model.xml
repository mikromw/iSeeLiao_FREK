<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:id="@+id/circle.holder"
    android:layout_marginBottom="10dp"
    android:elevation="3dp">
    <LinearLayout
        android:padding="10dp"
        android:background="#eee"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle.icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_group"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/circle.name"
                style="@style/bold_font"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t3"/>
            <TextView
                android:id="@+id/circle.last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/t4"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="@dimen/t5"
            android:id="@+id/time_active"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_right_arrow_white"/>
    </LinearLayout>
</android.support.v7.widget.CardView>